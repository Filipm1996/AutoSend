<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#F3F3F3"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <EditText
        android:textColor="@color/titles"
        android:textColorHint="@color/grey1"
        android:id="@+id/editTextNameAndSurrname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:hint= "Wpisz imie i nazwisko"
        />
    <EditText
        android:textColor="@color/titles"
        android:textColorHint="@color/grey1"
        android:id="@+id/editTextPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/editTextNameAndSurrname"
        android:hint="Wpisz numer tel."/>
    <Button
        android:textColor="@color/titles"
        android:backgroundTint="@color/white"
        android:id="@+id/addButton"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Dodaj"
        app:layout_constraintTop_toBottomOf="@id/editTextNameAndSurrname"
        app:layout_constraintEnd_toEndOf="@id/editTextPhone"/>
    <Button
        android:textColor="@color/titles"
        android:backgroundTint="@color/white"
        android:id="@+id/cancelButton"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Anuluj"
        app:layout_constraintTop_toBottomOf="@id/editTextPhone"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>

